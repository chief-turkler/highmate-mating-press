<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- choking on blood -->
  <SoundDef>
    <defName>ChokingSound</defName>
    <context>MapOnly</context>
    <maxSimultaneous>2</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>ChokingOnBlood</clipPath>
          </li>
        </grains>
        <volumeRange>
          <min>10</min>
          <max>20</max>
        </volumeRange>
        <pitchRange>
          <min>0.9</min>
          <max>1.1</max>
        </pitchRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>BoneSnapSound</defName>
    <context>MapOnly</context>
    <eventNames />
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>BoneSnap</clipFolderPath>
          </li>
        </grains>
        <pitchRange>
          <min>0.9</min>
          <max>1.2</max>
        </pitchRange>
        <volumeRange>
          <min>20</min>
          <max>30</max>
        </volumeRange>
        <distRange>
          <min>0</min>
          <max>30</max>
        </distRange>
        <repeatMode>NeverTwice</repeatMode>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>Defibrillator</defName>
    <context>MapOnly</context>
    <maxSimultaneous>2</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>defibrillator</clipPath>
          </li>
        </grains>
        <volumeRange>20~20</volumeRange>
        <pitchRange>
          <min>0.9</min>
          <max>1.1</max>
        </pitchRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>UseAutoinjector</defName>
    <context>MapOnly</context>
    <maxSimultaneous>2</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <!-- yep, this one is stolen from Escape from Tarkov. Don't tell anyone. -->
          <li Class="AudioGrain_Clip">
            <clipPath>autoinjector_use</clipPath>
          </li>
        </grains>
        <volumeRange>25~25</volumeRange>
        <pitchRange>
          <min>0.9</min>
          <max>1.1</max>
        </pitchRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>UseSuctionDevice</defName>
    <sustain>True</sustain>
    <context>MapOnly</context>
    <maxVoices>2</maxVoices>
    <priorityMode>PrioritizeNearest</priorityMode>
    <subSounds>
      <li>
        <muteWhenPaused>True</muteWhenPaused>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>suction_device</clipPath>
          </li>
        </grains>
        <volumeRange>15~20</volumeRange>
        <pitchRange>0.9541177~1.137647</pitchRange>
        <distRange>10~50</distRange>
        <sustainLoop>False</sustainLoop>
        <sustainIntervalRange>0.8~1.6</sustainIntervalRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>PerformCpr</defName>  
    <sustain>True</sustain>
    <context>MapOnly</context>
    <maxVoices>2</maxVoices>
    <priorityMode>PrioritizeNearest</priorityMode>
    <subSounds>
      <li>
        <muteWhenPaused>True</muteWhenPaused>
        <grains>
          <li Class="AudioGrain_Folder">
            <!-- don't ask. if you have a better sound effect, please let me know -->
            <clipFolderPath>Impact/PunchHitPawn</clipFolderPath>
          </li>
        </grains>
        <volumeRange>8~12</volumeRange>
        <pitchRange>1~1.14837</pitchRange>
        <sustainIntervalRange>0.8~0.8</sustainIntervalRange>
        <distRange>10~30</distRange>
      </li>
    </subSounds>
  </SoundDef>
</Defs>