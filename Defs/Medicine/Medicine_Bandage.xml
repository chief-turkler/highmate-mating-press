<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef ParentName="DiseaseBase">
    <defName>Bandaged</defName>
    <label>bandaged</label>
    <description>Tightly applied bandaged which reduces bleeding rate.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0,152,0)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
      </li>
      <li>
        <compClass>MoreInjuries.HealthConditions.HeavyBleeding.Hemostats.HemostatHediffComp</compClass>
      </li>
    </comps>
  </HediffDef>

  <ThingDef ParentName="MedicalDeviceBase">
    <defName>Bandage</defName>
    <thingClass>ThingWithComps</thingClass>
    <label>bandage</label>
    <description>Pieces of fabric prepared to slow the flow of blood from wounds. Slow to apply.</description>
    <graphicData>
      <texPath>Thing/Bandage</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>500</stackLimit>
    <tradeNeverStack>false</tradeNeverStack>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <Mass>0.01</Mass>
      <MarketValue>5</MarketValue>
      <MaxHitPoints>5</MaxHitPoints>
      <WorkToMake>100</WorkToMake>
    </statBases>
    <drawGUIOverlay>true</drawGUIOverlay>
    <costStuffCount>5</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <modExtensions>
      <li Class="MoreInjuries.HealthConditions.HeavyBleeding.Hemostats.HemostatModExtension">
        <_coagulationMultiplier>0.5</_coagulationMultiplier>
        <_applyTime>90</_applyTime>
      </li>
    </modExtensions>
  </ThingDef>

  <RecipeDef>
    <defName>Make_BandageFive</defName>
    <label>make bandages x5</label>
    <description>Make 5 bandages.</description>
    <jobString>Making 5 bandages.</jobString>
    <workAmount>900</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <stuffCategoriesToAllow>
            <li>Fabric</li>
          </stuffCategoriesToAllow>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <products>
      <bandage>5</bandage>
    </products>
    <fixedIngredientFilter>
      <categories>
        <li>Textiles</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>CraftingSpot</li>
    </recipeUsers>
  </RecipeDef>
</Defs>